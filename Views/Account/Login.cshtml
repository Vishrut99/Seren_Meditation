<div class="container my-5" style="background: linear-gradient(135deg, #E6F4F1 0%, #D2E9E6 25%, #B8D8D8 50%, #A2C7C7 75%, #8EB8B8 100%); min-height: 100vh; font-family: 'Lato', sans-serif;">
    <h2 class="text-center mb-5 fw-bold" style="color: #2F4F4F; animation: fadeIn 1.5s ease-in-out;">Login</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm" style="background: rgba(255, 255, 255, 0.8); transition: transform 0.3s ease;">
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Login" method="post" style="animation: fadeIn 1.5s ease-in-out;">
                        @Html.AntiForgeryToken()
                        <div class="form-floating mb-3">
                            <input type="email" name="email" id="email" class="form-control bg-white text-dark border-secondary" placeholder="Email" required>
                            <label for="email" class="text-dark">Email</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" name="password" id="password" class="form-control bg-white text-dark border-secondary" placeholder="Password" required>
                            <label for="password" class="text-dark">Password</label>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="checkbox" id="remember" class="form-check-input">
                                <label for="remember" class="form-check-label">Remember me</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                    <div class="text-center mt-3">
                        <p>Don't have an account? <a href="/Account/Register" class="text-primary">Register</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
